<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:yGuiWPF">
	<!-- Primary Colors -->
	<SolidColorBrush x:Key="DefaultBrush" Color="#888888"/>
	<SolidColorBrush x:Key="SuccessBrush" Color="#008800"/>
	<SolidColorBrush x:Key="DangerBrush" Color="#880000"/>
	<SolidColorBrush x:Key="WarningBrush" Color="#886600"/>
	<SolidColorBrush x:Key="AccentBrush" Color="#000088"/>

	<!-- Background Colors -->
	<SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1a1a1a"/>
	<SolidColorBrush x:Key="AreaBackgroundBrush" Color="#3a3a3a"/>
	<SolidColorBrush x:Key="ElementBackgroundBrush" Color="#4a4a4a"/>
	<SolidColorBrush x:Key="ElementHighlightBackgroundBrush" Color="#6a6a6a"/>
</ResourceDictionary>