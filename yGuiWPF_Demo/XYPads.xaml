<Window x:Class="yGuiWPF_Demo.XYPads"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:yG="clr-namespace:yGuiWPF.Controls;assembly=yGuiWPF"
				xmlns:local="clr-namespace:yGuiWPF_Demo"
        mc:Ignorable="d"
				Background="{DynamicResource WindowBackgroundBrush}"
        Title="XYPads" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<yG:XYPad Grid.Column="0" Centered="False" Grid.Row="0" ShowValue="false" ForeGround="Green"/>
		<yG:XYPad Grid.Column="0" Grid.Row="1" ShowValue="true"  ForeGround="Red"/>
		<yG:XYPad Grid.Column="1" Grid.Row="0" ShowValue="false"  IsRounded="true" ForeGround="Blue"/>
		<yG:XYPad Grid.Column="1" Centered="False" Grid.Row="1" ShowValue="true"  IsRounded="true" />
	</Grid>
</Window>
